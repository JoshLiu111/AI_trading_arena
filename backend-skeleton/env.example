# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/trading_arena
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=false

# Application Configuration
APP_ENV=development
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Data Source APIs
# Yahoo Finance - Used for historical data and financial metrics (FREE, no API key required)
# No API key needed - yfinance library uses public APIs

# Alpaca - Used for real-time stock prices (FREE tier available)
# Sign up at https://alpaca.markets/ to get free API keys
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# Polygon.io - Optional backup data source (FREE tier available, can be omitted)
# Sign up at https://polygon.io/ to get free API key (optional)
POLYGON_API_KEY=your_polygon_api_key_here

# AI/LLM Configuration (optional - choose one or more)
# OpenAI - Paid service
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude - FREE tier available (recommended)
# Sign up at https://console.anthropic.com/ to get free API key
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini - FREE tier available (recommended)
# Sign up at https://aistudio.google.com/ to get free API key
# GOOGLE_API_KEY=your_google_api_key_here

# Groq - FREE tier available (recommended, very fast)
# Sign up at https://console.groq.com/ to get free API key
# GROQ_API_KEY=your_groq_api_key_here

